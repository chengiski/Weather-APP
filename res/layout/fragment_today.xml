<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".TodayFragment"
    android:paddingTop="65dp"
    android:paddingLeft="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    //Line one
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
        //WindSpeed
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="152dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="9dp"
            android:layout_marginRight="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/weather_windy"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:id="@+id/windSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind Speed"
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        //Pressure
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="152dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="9dp"
            android:layout_marginRight="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/gauge"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:id="@+id/pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        //Precipitation
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="152dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="9dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/weather_pouring"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:id="@+id/precipitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precipitation"
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    //Line two
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
        //Temp
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="152dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="9dp"
            android:layout_marginRight="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/thermometer"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        //summary
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="152dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="9dp"
            android:layout_marginRight="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp">
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/weather_sunny"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:id="@+id/iconText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="19dp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        //Humidity
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="152dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="9dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/water_percent"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    //Line three
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        //Visibility
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="152dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="9dp"
            android:layout_marginRight="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/eye_outline"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:id="@+id/visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visibility"
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        //Cloud Cover
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="152dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="9dp"
            android:layout_marginRight="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/cloud_cover"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:id="@+id/cloudCover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloud Cover"
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        //Ozone
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="152dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="9dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/earth"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:id="@+id/ozone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ozone"
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>



</LinearLayout>

</FrameLayout>